<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_Nhapmon">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <ImageButton
        android:background="@color/white"
        android:id="@+id/imgbtn1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="10dp"
        android:src="@drawable/heart"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        />
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType = "fitCenter"
        android:background="@color/white"
        android:src = "@drawable/ic_ring"
        android:layout_marginRight="10dp"/>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:layout_marginEnd="20dp"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:orientation="vertical"
      android:background="#C2F8CB"
      android:paddingStart="10dp"
      android:paddingEnd="10dp">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:text="Unit 1"
          android:textSize="20dp"
          android:textStyle="bold"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Chủ đề gọi món"
        android:textSize="16dp"
        android:textStyle="bold"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="510dp"
      android:orientation="vertical"
      android:paddingTop="20dp"
      android:paddingStart="20dp">
    <android.widget.Button
        android:id="@+id/button1"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:text="Từ vựng"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_massage"
        android:background="@drawable/bg_radio"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:paddingStart="10dp"
        />
    <View android:layout_width="5dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_line"
        android:layout_marginStart="180dp"/>
    <android.widget.Button
        android:id="@+id/button2"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:text="Video"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_btnvideo"
        android:background="@drawable/bg_radio"
        android:layout_marginStart="130dp"
        android:paddingStart="10dp"
        />
    <View android:layout_width="5dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_line"
        android:layout_marginStart="230dp"/>
    <android.widget.Button
        android:id="@+id/button3"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:text="Mẫu câu"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_btnbook"
        android:background="@drawable/bg_radio"
        android:layout_marginStart="70dp"
        android:paddingStart="10dp"
        />
    <View android:layout_width="5dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_line"
        android:layout_marginStart="100dp"/>
    <android.widget.Button
        android:id="@+id/button4"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:text="Luyện nghe"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_btntai"
        android:background="@drawable/bg_radio"
        android:layout_marginStart="20dp"
        android:paddingStart="10dp"
        />
    <View android:layout_width="5dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_line"
        android:layout_marginStart="150dp"/>
    <android.widget.Button
        android:id="@+id/button5"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:text="Ôn tập"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_btnontap"
        android:background="@drawable/bg_radio"
        android:layout_marginStart="130dp"
        android:paddingStart="10dp"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
      <ImageButton
          android:layout_width="40dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_video"
          android:background="@color/white"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Video"
          android:textAlignment="center"
          />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
      <ImageButton
          android:layout_width="40dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_map"
          android:background="#E64646"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Nhập môn"
          android:textAlignment="center"
          />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
      <ImageButton
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/ic_home"
          android:background="@drawable/home_background"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
      <ImageButton
          android:layout_width="40dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_class"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Class"
          android:textAlignment="center"
          />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
      <ImageButton
          android:layout_width="40dp"
          android:layout_height="30dp"
          android:src="@drawable/ic_pencil"
          android:background="@color/white"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Ôn tập"
          android:textAlignment="center"
          />

    </LinearLayout>

  </LinearLayout>

  </androidx.appcompat.widget.LinearLayoutCompat
   >